@model IEnumerable<MoviesViewModel>

<h2>Search Results</h2>

<div class="container">
    @if (Model.Count() == 0)
    {
        <p class="text-danger">No results.</p>
    }
    else
    {
        @await Html.PartialAsync("_MovieTablePartial", Model)
    }
</div>
<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Back to Menu</a>
</div>